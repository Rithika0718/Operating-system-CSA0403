#include <stdio.h>

int main() {
    int rq[10], n, i, head, total = 0;
    printf("Enter requests: ");
    scanf("%d", &n);
    for (i = 0; i < n; i++) scanf("%d", &rq[i]);

    printf("Enter head: ");
    scanf("%d", &head);

    for (i = 0; i < n; i++) {
        total += abs(rq[i] - head);
        head = rq[i];
    }
    printf("Total movement: %d\n", total);
    return 0;
}

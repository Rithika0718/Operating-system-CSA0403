#include <stdio.h>
#include <stdlib.h>

int main() {
    FILE *fp;
    char data[100];

    fp = fopen("file.txt", "w");
    fprintf(fp, "Hello OS Lab\n");
    fclose(fp);

    fp = fopen("file.txt", "a");
    fprintf(fp, "File Management Demo\n");
    fclose(fp);

    fp = fopen("file.txt", "r");
    printf("File contents:\n");
    while (fgets(data, sizeof(data), fp))
        printf("%s", data);
    fclose(fp);

    return 0;
}

#include <stdio.h>

int main() {
    int start, length, i;
    int disk[100] = {0};

    printf("Enter starting block of file: ");
    scanf("%d", &start);

    printf("Enter length of file (number of blocks): ");
    scanf("%d", &length);

    // Check if blocks are free
    for (i = start; i < start + length; i++) {
        if (disk[i] == 1) {
            printf("\nFile cannot be allocated (blocks already occupied)\n");
            return 0;
        }
    }

    // Allocate blocks
    for (i = start; i < start + length; i++) {
        disk[i] = 1;
    }

    printf("\nFile allocated successfully\n");
    printf("Allocated blocks are:\n");

    for (i = start; i < start + length; i++) {
        printf("Block %d -> Allocated\n", i);
    }

    return 0;
}

#include <stdio.h>
#include <fcntl.h>
#include <unistd.h>
#include <string.h>

int main() {
    int fd;
    char writeData[] = "UNIX File Management System Calls\n";
    char readData[100];

    fd = open("file1.txt", O_CREAT | O_WRONLY, 0644);
    write(fd, writeData, strlen(writeData));
    close(fd);

    fd = open("file1.txt", O_RDONLY);
    read(fd, readData, sizeof(readData));
    printf("File Content:\n%s", readData);
    close(fd);

    return 0;
}

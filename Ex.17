#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, i;
    int request[20];
    int head, total = 0;

    printf("Enter number of disk requests: ");
    scanf("%d", &n);

    printf("Enter disk request sequence:\n");
    for (i = 0; i < n; i++)
        scanf("%d", &request[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    total = abs(request[0] - head);

    for (i = 1; i < n; i++) {
        total += abs(request[i] - request[i - 1]);
    }

    printf("\nTotal Head Movement = %d\n", total);

    return 0;
}
